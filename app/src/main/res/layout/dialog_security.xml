<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:paddingTop="25dp"
        android:paddingRight="20dp"
    android:paddingLeft="@dimen/distance_20"
    android:paddingBottom="@dimen/distance_30">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="安全中心"
            android:textColor="@color/color_131313"
            android:textSize="27sp"/>
        <ImageView
            android:id="@+id/IvClose"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/guanbi_anquanzhongxin"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <ImageView
        android:id="@+id/Iv110"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/baojing"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/distance_20"/>

    <RelativeLayout
        android:id="@+id/RlUrgentPeople"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="@dimen/distance_20">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_131313"
            android:text="紧急联系人"
            android:drawableLeft="@mipmap/jinjilianxiren"
            android:gravity="center"
            android:drawablePadding="@dimen/dp_10"
            android:textSize="@dimen/tv15"
            android:layout_centerVertical="true"
            />
        <TextView
            android:id="@+id/TvUrgentPeople"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_a2a2a2"
            android:text="未设置"
            android:drawableRight="@mipmap/jiantou_anquanzhongxin"
            android:gravity="center"
            android:drawablePadding="@dimen/dp_10"
            android:textSize="@dimen/tv15"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>
    <View
        android:layout_width="wrap_content"
        android:layout_height="0.5px"
        android:background="@color/color_b5b5b5"/>
    <RelativeLayout
        android:id="@+id/RlAuth"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_131313"
            android:text="实名认证"
            android:drawableLeft="@mipmap/shimingrenzheng"
            android:gravity="center"
            android:drawablePadding="@dimen/dp_10"
            android:textSize="@dimen/tv15"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/TvAuth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_a2a2a2"
            android:text="未认证"
            android:drawableRight="@mipmap/jiantou_anquanzhongxin"
            android:gravity="center"
            android:drawablePadding="@dimen/dp_10"
            android:textSize="@dimen/tv15"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    </LinearLayout>