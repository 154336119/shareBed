<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:circle="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:background="@color/white"/>
    <TextView
        android:id="@+id/mToolbarTitleLabel"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:singleLine="true"
        android:text="我的"
        android:textColor="#121312"
        android:textSize="18sp"
        android:background="?attr/colorPrimary"
        android:padding="10dp"/>
    <View
        android:id="@+id/underLine"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ececec"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/distance_15dp"
        android:background="@color/white"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/TvHead"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@mipmap/ic_logo"/>
            <TextView
                android:id="@+id/TvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="沐浴"
                android:layout_toRightOf="@+id/TvHead"
                android:textColor="@color/color_131313"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="15dp"/>
            <ImageView
                android:id="@+id/IvAuthState"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/qurenzheng"
                android:layout_below="@+id/TvName"
                android:layout_alignLeft="@+id/TvName"
                android:layout_marginTop="5dp"/>
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="服务"
            android:textSize="20sp"
            android:textColor="@color/color_131313"
            android:textStyle="bold"
            android:layout_marginTop="30dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/white"
            android:layout_marginTop="30dp">
            <TextView
                android:id="@+id/TvUserInfo"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="个人信息"
                android:textColor="@color/color_131313"
                android:textSize="13sp"
                android:drawablePadding="10dp"
                android:drawableTop="@mipmap/gerenxinxi_mine"
                android:gravity="center"/>
            <TextView
                android:id="@+id/TvMsg"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="消息中心"
                android:textColor="@color/color_131313"
                android:textSize="13sp"
                android:drawablePadding="10dp"
                android:drawableTop="@mipmap/xiaoxizhongxin_mine"
                android:gravity="center"/>
            <TextView
                android:id="@+id/TvSetting"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="设置"
                android:textColor="@color/color_131313"
                android:textSize="13sp"
                android:drawablePadding="10dp"
                android:drawableTop="@mipmap/shezhi_mine"
                android:gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/white"
            android:layout_marginTop="25dp">
            <TextView
                android:id="@+id/TvKefu"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:text="客服中心"
                android:textColor="@color/color_131313"
                android:textSize="13sp"
                android:drawablePadding="10dp"
                android:drawableTop="@mipmap/kefuzhongxin_mine"
                android:gravity="center"
                android:layout_gravity="bottom"/>
            <RelativeLayout
                android:id="@+id/RlDeposit"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="70dp">
                <TextView
                    android:id="@+id/Tv02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="押金"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/color_131313"
                    android:textSize="13sp"
                    android:drawablePadding="10dp"
                    android:drawableTop="@mipmap/yajin_mine"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:layout_alignParentBottom="true"/>
                <ImageView
                    android:id="@+id/IvNoDeposit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/weijiaoyajin"
                    android:layout_toRightOf="@+id/Tv02"
                    android:layout_marginLeft="-10dp"/>
            </RelativeLayout>
            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="SHEZHI "
                android:textColor="@color/color_131313"
                android:textSize="13sp"
                android:drawablePadding="10dp"
                android:drawableTop="@mipmap/shezhi_mine"
                android:visibility="invisible"
                android:gravity="center"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>