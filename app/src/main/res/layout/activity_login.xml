<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="false"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="15dp">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dp_40"
                android:text="登录"
                android:textStyle="bold"
                android:textColor="@color/color_131313"
                android:layout_marginTop="@dimen/distance_20"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/color_b5b5b5"
                android:layout_marginTop="10dp"
                android:text="登录/注册成功后，再次打开APP，将无需再次登录" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_12"
                    android:textColor="@color/color_b5b5b5"
                    android:text="手机号码" />

                <EditText
                    android:id="@+id/edtMobile"
                    style="@style/edit_base"
                    android:completionThreshold="1"
                    android:hint="请输入手机号码"
                    android:lines="1"
                    android:drawablePadding="5dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_12"
                    android:textColor="@color/color_b5b5b5"
                    android:text="验证码"
                    android:layout_marginTop="30dp"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/edtVCode"
                        style="@style/edit_base"
                        android:completionThreshold="1"
                        android:hint="请输入验证码"
                        android:lines="1"
                        android:drawablePadding="5dp"/>

                    <com.slb.sharebed.weight.CountTimerButton
                        android:id="@+id/BtnGetCode"
                        style="@style/btn_small_stroke_login"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_gravity="right|center_vertical"
                        android:layout_centerVertical="true"
                        android:paddingLeft="@dimen/distance_15dp"
                        android:paddingRight="@dimen/distance_15dp"
                        android:text="@string/enter_the_validation_code" />
                </RelativeLayout>

                <ImageView
                    android:id="@+id/btnLogin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/denglu"
                    android:layout_marginTop="60dp"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp">
                    <View
                        android:layout_width="80dp"
                        android:layout_height="0.5sp"
                        android:background="#f3f3f3"
                        android:layout_toLeftOf="@+id/Tv01"
                        android:layout_centerVertical="true"/>
                    <View
                        android:layout_width="80dp"
                        android:layout_height="0.5sp"
                        android:background="#f3f3f3"
                        android:layout_toRightOf="@+id/Tv01"
                        android:layout_centerVertical="true"/>
                    <TextView
                        android:id="@+id/Tv01"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:padding="@dimen/distance_10"
                        android:text="or"
                        android:textSize="16sp"
                        android:textColor="#B3B3B3"
                        android:layout_centerHorizontal="true"/>
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/TvWxLogin"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:drawableTop="@mipmap/weixin"
                        android:text="微信登录"
                        android:gravity="center"
                        android:layout_gravity="center_horizontal"/>
                    <TextView
                        android:id="@+id/TvQQLogin"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:drawableTop="@mipmap/qq"
                        android:text="QQ登录"
                        android:gravity="center"
                        android:layout_gravity="center_horizontal"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>
