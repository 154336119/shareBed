<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/color_131313">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@mipmap/beijing_shoudongshuru"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textSize="19sp"
                android:layout_marginTop="30dp"
                android:textColor="@color/color_131313"
                android:textStyle="bold"
                android:text="手动输入床码"
                />
            <EditText
                android:layout_width="250dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:hint="请输入床码"
                android:focusable="true"
                android:textColor="@color/color_131313"
                android:inputType="number"
                android:maxLines="1"
                android:layout_height="wrap_content"
                style="@style/btn_bottom_stroke"/>
            <ImageView
                android:id="@+id/BtnUsedBed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/lijiyongchuang"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"/>
            <ImageView
                android:id="@+id/BtnScanCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/qiehuansaoma"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"/>
        </LinearLayout>
    </LinearLayout>