<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:circle="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="false"
    android:orientation="vertical"
    android:background="#f1f1f1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/distance_15dp">
                <TextView
                    android:id="@+id/Tv01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="新手机号"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/color_494949" />
                <EditText
                    android:id="@+id/edtMobile"
                    android:completionThreshold="1"
                    android:hint="请输入手机号码"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="100sp"
                    android:background="@null"
                    android:lines="1"
                    android:maxLength="15"
                    android:textSize="15sp"
                    android:drawablePadding="5dp"/>
                <TextView
                    android:id="@+id/TvAuthState"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ff2943"
                    android:layout_marginRight="20dp"
                    android:layout_toLeftOf="@+id/Iv01"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f1f1f1"/>
            <RelativeLayout
                android:id="@+id/RlChangePhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/distance_15dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="验证码"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/color_494949"/>
                <EditText
                    android:id="@+id/edtVCode"
                    android:completionThreshold="1"
                    android:hint="请输入验证码"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="100sp"
                    android:background="@null"
                    android:lines="1"
                    android:maxLength="10"
                    android:textSize="15sp"
                    android:drawablePadding="5dp"/>
                <TextView
                    android:id="@+id/TvPhone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#aaaaaa"
                    android:layout_marginRight="20dp"
                    android:lineSpacingMultiplier="3"
                    android:textScaleX="0.75"
                    android:layout_toLeftOf="@+id/Iv02"/>
                <com.slb.sharebed.weight.CountTimerButton
                    android:id="@+id/BtnGetCode"
                    style="@style/btn_small_stroke_login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="right|center_vertical"
                    android:layout_centerVertical="true"
                    android:paddingLeft="@dimen/distance_15dp"
                    android:paddingRight="@dimen/distance_15dp"
                    android:text="@string/enter_the_validation_code" />
            </RelativeLayout>

        </LinearLayout>
    <TextView
        android:id="@+id/TvBtn"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/slt_btn_button_gradual_no_around"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:gravity="center"
        android:text="确认修改"/>
</RelativeLayout>