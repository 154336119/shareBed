<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true" android:state_pressed="true">
        <shape android:shape="rectangle">
            <!-- 填充的颜色 -->
            <solid android:color="#75c233" />
            <!--设置渐变-->
            <gradient android:startColor="#1d68ff"
                android:endColor="#1bb5ff"
                android:angle="180"/>
            <!--angle控制渐变的方向-->
            <!-- 设置按钮的四个角为弧形 -->
            <!-- android:radius 弧形的半径 -->
            <corners android:radius="20dp" />
            <!-- padding：Button里面的文字与Button边界的间隔 -->
            <padding
                android:left="10dp"
                android:top="5dp"
                android:right="10dp"
                android:bottom="5dp" />
        </shape>
    </item>
    <item android:state_enabled="true" android:state_pressed="false">
        <shape android:shape="rectangle">
            <!-- 填充的颜色 -->
            <solid android:color="#75c233" />
            <!--设置渐变-->
            <gradient android:startColor="#1d68ff"
                android:endColor="#1bb5ff"
                android:angle="180"/>
            <!--angle控制渐变的方向-->
            <!-- 设置按钮的四个角为弧形 -->
            <!-- android:radius 弧形的半径 -->
            <corners android:radius="20dp" />
            <!-- padding：Button里面的文字与Button边界的间隔 -->
            <padding
                android:left="10dp"
                android:top="5dp"
                android:right="10dp"
                android:bottom="5dp" />
        </shape>
    </item>

    <item android:state_enabled="false">
        <shape android:shape="rectangle" >
            <solid android:color="@color/colors_c1c1c1" />
            <corners android:radius="@dimen/btn_bottom_radius"></corners>
            <size android:height="@dimen/btn_bottom_height"></size>
            <!--angle控制渐变的方向-->
            <!-- 设置按钮的四个角为弧形 -->
            <!-- android:radius 弧形的半径 -->
            <corners android:radius="20dp" />
            <!-- padding：Button里面的文字与Button边界的间隔 -->
            <padding
                android:left="10dp"
                android:top="5dp"
                android:right="10dp"
                android:bottom="5dp" />
        </shape>
    </item>
</selector>