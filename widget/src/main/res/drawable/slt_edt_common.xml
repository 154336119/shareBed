            <item
                android:left="-2dp"
                android:right="-2dp"
                android:top="-2dp">
                <shape>
                    <!--<solid android:color="#00FFFFFF" />-->

                    <stroke
                        android:width="1dp"
                        android:color="@color/colors_d2" />
                </shape>
            </item>
        </layer-list>
